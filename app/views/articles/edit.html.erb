<h1> Edit Existing Article </h1>

<% if @article.errors.any? %>
	<h2> The following errors preventing the article from getting created </h2>
	<ul>
	<% @article.errors.full_messages.each do |msg| %>
	<li><%= msg %></li>
	<% end %>
	</ul>
	<% end %>

<!--Base on the article ID Rails will prefill the information into the appropriate box from the databas -->
<%= form_for @article do |f| %>
	<p>
		<%= f.label :title %></br>
		<%= f.text_field :title %>
	</p>
	<p>
		<%= f.label :description %></br>
		<%= f.text_area :description %>
	</p>
	<p>
		<%= f.submit %>
	</p>
	<p>


<% end %>
<%= link_to "Back to Articles Listing", articles_path %>